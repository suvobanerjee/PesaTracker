<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_item_summary_details"
    android:background="@android:color/white"
    android:layout_marginBottom="2dp">

    <TextView
        android:id="@+id/list_item_summary_details_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textColor="@android:color/black"
        android:text="2016"/>


    <TextView
        android:id="@+id/list_item_summary_dtls_trx_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017"
        android:padding="16dp"
        android:layout_toRightOf="@id/list_item_summary_details_time"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/list_item_summary_dtls_trx_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017"
        android:padding="16dp"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/black"
        />



</RelativeLayout>